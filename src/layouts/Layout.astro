---
import '@fontsource-variable/oswald';
import '@fontsource/source-sans-pro';
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
		<div class="button--whatsapp">
			<a href="https://api.whatsapp.com/send/?phone=593982555079&text&type=phone_number&app_absent=0" target="_blank">
				<img class="img--large" src="/wsspButton.png" alt="Go-to-whatsapp-button">
			</a>
		</div>
	</body>
</html>

<style is:global>
	/* Root styles */
	:root{
		--white: #f5f5f5;
		--black: #222;
		--green: #798e65;
		--blue: #10aaa0;
		/* Fonts */
		--body-font: 'Source Sans Pro', sans-serif;
		--heading-font: 'Oswald', sans-serif;
	}

	/* global styles */
	*{
		box-sizing: border-box;
		padding: 0;
		margin: 0
	}
	html{
		font-size: 62.5%;
	}
	body{
		font-size: 1.6rem;
		font-family: var(--body-font);
		background-color: var(--white);
		color: var(--black);
	}

	/* TEXT */
	.title{
		font-family: var(--heading-font);
		letter-spacing: .15rem;
	}

	/* IMAGES */
	.img--large{
		width: 100%;
		height: 100%;
	}
	.img--contain{
		object-fit: contain;
	}
	.img--cover{
		object-fit: cover;
	}
	.img--top{
		object-position: top;
	}

	/* LIST */
	.list--reset{
		list-style: none;
	}

	/* FLEX */
	.flex--rownowrap{
		display: flex;
		flex-flow: row nowrap;
	}
	.flex--colnowrap{
		display: flex;
		flex-flow: column nowrap;
	}
	.center{
		display: flex;
		justify-content: center;
		align-items: center;
	}
	.flex--rownowrap--reverse{
		display: flex;
		flex-flow: row-reverse nowrap;
	}
	.flex--rowwrap{
		display: flex;
		flex-flow: row wrap;
	}

	/* LINKS */	
	.link--reset{
		text-decoration: none;
	}

	/* COLORS */
	.color--black{
		color: var(--black);
	}
	.color--white{
		color: var(--white);
	}
	.bg--black{
		background-color: var(--black);
	}
	.bg--white{
		background-color: var(--white);
	}

	/* BUTTONS */
	.button{
		border: none;
		cursor: pointer;
	}
	.button--whatsapp{
		width: 10rem;
		position: fixed;
		bottom: 2rem;
		right: 2rem;
	}
	/* BORDERS */
	.border--bottom--black{
		border-bottom: 1px solid var(--black);
	}
	.border--bottom--white{
		border-bottom: 1px solid var(--white);
	}
</style>
